<div id="loginModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2><span class="fa fa-sign-in"></span> Login in here</h2>
      </div>
      <div class="modal-body">
        <form action="/login" method="post" class="form col-md-12">

          <input name="email" type="text" class="form-control input-lg" placeholder="Email" required autofocus />
          <br/>
          <input name="password" type="password" class="form-control input-lg" placeholder="Password" required />
          <br/>

          <button type="submit" class="btn btn-info btn-lg btn-block">Sign In</button>
        </form>
      </div>
      <div class="modal-footer">
        <div class="col-md-12 text-left">
          <p>Need an account? <a href="/signup">Signup</a>
          </p>
          <p>Or go<a href="/"> home</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
